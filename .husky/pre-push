echo "🔍 Running pre-push checks..."

# Run linting (fast)
echo "📝 Running linter..."
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ Linting failed. Please fix the errors before pushing."
  exit 1
fi

# Run tests (fast, no watch mode)
echo "🧪 Running tests..."
npm run test
if [ $? -ne 0 ]; then
  echo "❌ Tests failed. Please fix the failing tests before pushing."
  exit 1
fi

# For now, skip build check to speed up push (build will be checked in CI)
# Uncomment the lines below if you want to include build check:
# echo "🏗️  Testing build..."
# npm run build
# if [ $? -ne 0 ]; then
#   echo "❌ Build failed. Please fix the build errors before pushing."
#   exit 1
# fi

echo "✅ Pre-push checks passed! Build will be validated in CI."
