# Next.js Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Supabase Configuration (Shared across all domains)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE=your_supabase_service_role_key

# Database Configuration (Shared across all domains)
DATABASE_URL=postgresql://user:password@host:port/database

# Authentication Setup
ADMIN_EMAIL=admin@getreceipts.org

# Multi-Domain Configuration
# Note: All domains share the same backend, but you can configure
# domain-specific settings in src/lib/domain-config.ts

# Optional: Analytics and Monitoring
# You may want separate analytics for each domain:
# NEXT_PUBLIC_PLAUSIBLE_DOMAIN=getreceipts.org
# NEXT_PUBLIC_PLAUSIBLE_DOMAIN_FACTCHECK=factcheck.yourdomain.com
# NEXT_PUBLIC_PLAUSIBLE_DOMAIN_CLAIMS=claims.yourdomain.com

# Optional: Domain-specific overrides (if needed)
# NEXT_PUBLIC_PRIMARY_DOMAIN=getreceipts.org
# LOGFLARE_API_KEY=your_logflare_api_key

# For knowledge_chipper integration (set after running setup-auth.ts)
# GETRECEIPTS_API_KEY=gr_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# GETRECEIPTS_API_URL=http://localhost:3000/api
